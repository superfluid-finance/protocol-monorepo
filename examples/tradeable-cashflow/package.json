{
    "name": "superapp-demo",
    "version": "1.0.0",
    "description": "SuperApp demo - a simple money stream lottery",
    "main": "scripts/demo.js",
    "scripts": {
        "build": "truffle compile --all",
        "pretest": "rm -rf build;mkdir -p build/contracts;cp node_modules/@superfluid-finance/ethereum-contracts/build/contracts/* build/contracts/",
        "test": "truffle test",
        "deploy": "npm run build && RELEASE_VERSION=preview-20200928 npx truffle --network goerli exec scripts/deploy.js",
        "copy-watch": "nodemon --watch \"../../packages\" -ext \"js,ts,tsx,sol\" --exec rsync -rtvu --delete \"../../packages/\" \"./node_modules/@superfluid-finance/\""
    },
    "author": "Superfluid",
    "license": "MIT",
    "devDependencies": {
        "@decentral.ee/web3-helpers": "^0.3.2",
        "@openzeppelin/contracts": "^3.2.1-solc-0.7",
        "@openzeppelin/test-helpers": "^0.5.6",
        "@superfluid-finance/ethereum-contracts": "latest",
        "@truffle/contract": "^4.2.23",
        "@truffle/hdwallet-provider": "^1.1.0",
        "dotenv": "^8.2.0",
        "truffle": "^5.1.46"
    }
}
