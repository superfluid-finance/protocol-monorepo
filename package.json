{
    "name": "@superfluid-finance/superfluid-monorepo",
    "private": true,
    "description": "Superfluid Protocol monorepo",
    "repository": "github:superfluid-finance/superfluid-monorepo",
    "license": "MIT",
    "scripts": {
        "dev": "yarn workspace @superfluid-finance/ethereum-contracts dev",
        "build": "yarn workspaces run build",
        "lint": "yarn workspaces run lint",
        "pre-commit":"yarn workspaces run pre-commit"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.5",
        "lint-staged": "^10.5.3",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.0"
    },
    "lint-staged": {
        "**/*.+(js|jsx|ts|tsx|json|css|sol)": [
            "yarn pre-commit"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    }
}
