{
    "name": "@superfluid-finance/ethereum-contracts",
    "version": "1.0.0-rc.7",
    "description": " Ethereum contracts implementation for the Superfluid Protocol",
    "homepage": "https://github.com/superfluid-finance/protocol-monorepo/tree/dev/packages/ethereum-contracts#readme",
    "repository": "github:superfluid-finance/protocol-monorepo",
    "license": "AGPL-3.0",
    "files": [
        "/contracts/**/*",
        "!/contracts/mocks/*",
        "/build/contracts/*.json",
        "!/build/contracts/*Mock*.json",
        "!/build/contracts/*Tester*.json",
        "/build/abi.js",
        "artifacts/**/*",
        "scripts/**/*",
        "test/TestEnvironment.js"
    ],
    "scripts": {
        "dev": "nodemon -e sol,js -i build -x 'yarn test 2>&1'",
        "build": "run-s build:*",
        "build:contracts": "rm -f build/contracts/*;truffle compile",
        "test": "run-s test:*:*",
        "test:contracts:js": "truffle test test/contracts.test.js",
        "test:contracts:sol": "truffle test test/contracts/*/*.sol",
        "test:deployment:embeded": "truffle test test/deployment.test.js",
        "test:deployment:scripts": "test/deployment.test.sh",
        "test-coverage": "truffle run coverage --file test/contracts.test.js",
        "proxify": "truffle-flattener contracts/RToken.sol > flat.ignore.sol && sol-proxy create flat.ignore.sol",
        "lint": "run-s lint:*",
        "lint:sol": "solhint -w 0 contracts/*.sol contracts/*/*.sol && echo '✔  Your .sol files look good.'",
        "lint:js-eslint": "eslint . --max-warnings=0 --report-unused-disable-directives --fix && echo '✔  Your .js files look good.'",
        "check-no-focused-tests": "grep -FR .only test || { echo 'No test is focused.';exit 0; } && { echo '✘ You have focused tests.'; exit 1; }",
        "pre-commit": "run-s pre-commit:*",
        "pre-commit:lint": "yarn lint",
        "pre-commit:check-no-focused-tests": "yarn check-no-focused-tests",
        "check-updates": "ncu --dep prod,dev"
    },
    "dependencies": {
        "@decentral.ee/web3-helpers": "0.5.3",
        "@openzeppelin/contracts": "3.4.1",
        "@superfluid-finance/js-sdk": "0.5.3",
        "@truffle/contract": "4.3.34",
        "ethereumjs-tx": "2.1.2",
        "ethereumjs-util": "7.1.0",
        "stack-trace": "0.0.10"
    },
    "devDependencies": {
        "@openzeppelin/test-helpers": "0.5.12",
        "@truffle/hdwallet-provider": "^1.5.0",
        "async": "^3.2.1",
        "dotenv": "10.0.0",
        "ganache-time-traveler": "1.0.16",
        "readline": "1.3.0",
        "solhint": "3.3.6",
        "solidity-coverage": "0.7.16",
        "truffle": "5.4.10",
        "truffle-flattener": "^1.5.0",
        "truffle-plugin-verify": "^0.5.11"
    }
}
