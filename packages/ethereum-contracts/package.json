{
    "name": "@superfluid-finance/ethereum-contracts",
    "version": "1.0.0",
    "description": " Ethereum contracts implementation for the Superfluid Protocol",
    "homepage": "https://github.com/superfluid-finance/protocol-monorepo/tree/dev/packages/ethereum-contracts#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/superfluid-finance/protocol-monorepo.git",
        "directory": "packages/ethereum-contracts"
    },
    "license": "AGPL-3.0",
    "files": [
        "/contracts/**/*",
        "!/contracts/mocks/*",
        "/build/contracts/*.json",
        "!/build/contracts/*Mock*.json",
        "!/build/contracts/*Tester*.json",
        "/build/contracts-sizes.txt",
        "/build/abi.js",
        "artifacts/**/*",
        "scripts/**/*",
        "utils/**/*"
    ],
    "scripts": {
        "dev": "nodemon -e sol,js -i build -x 'yarn test:contracts:js 2>&1'",
        "build": "run-s build:*",
        "build:contracts": "rm -f build/contracts/*;truffle compile",
        "build:contracts-size": "bash tasks/print-contract-sizes.sh | tee build/contracts-sizes.txt",
        "testenv:start": "test/testenv-ctl.sh start",
        "testenv:stop": "test/testenv-ctl.sh stop",
        "testenv:deploy": "truffle exec scripts/deploy-test-environment.js : TEST",
        "pretest": "{ yarn testenv:start > /dev/null& } && sleep 5",
        "test": "mkdir -p test/output && run-s test:*:*",
        "test:contracts:js": "truffle test testsuites/all-contracts.js",
        "test-contracts:sol": "truffle test test/contracts/*/*.sol",
        "test-contracts:0.8.0-compatibility": "./test/test-0.8.0.sh",
        "test:scripts-js:deployment": "truffle test test/scripts/deployment.test.js",
        "test:scripts-sh:deployment": "test/scripts/deployment.test.sh",
        "test-coverage": "mkdir -p test/output && truffle run coverage --network coverage --file testsuites/all-contracts.js",
        "posttest": "yarn testenv:stop",
        "lint": "run-s lint:*",
        "lint:sol": "solhint -w 0 contracts/*.sol contracts/*/*.sol && echo '✔  Your .sol files look good.'",
        "lint:js-eslint": "eslint . --max-warnings=0 --report-unused-disable-directives && echo '✔  Your .js files look good.'",
        "lint:check-no-focused-tests": "grep -FR .only test || { echo 'No test is focused.';exit 0; } && { echo '✘ You have focused tests.'; exit 1; }",
        "pre-commit": "if [ ! -z \"$(git status -s .)\" ];then run-s pre-commit:*;else true;fi",
        "pre-commit:lint": "yarn lint",
        "check-updates": "ncu --target minor --dep prod,dev",
        "cloc": "sh tasks/cloc.sh"
    },
    "dependencies": {
        "@arachnid/solidity-string-utils": "github:Arachnid/solidity-stringutils#46983c6d9462a80229cf0d5bab8ea3b3ee31066c",
        "@decentral.ee/web3-helpers": "0.5.3",
        "@openzeppelin/contracts": "4.5.0",
        "@superfluid-finance/js-sdk": "0.5.12",
        "@truffle/contract": "4.4.6",
        "ethereumjs-tx": "2.1.2",
        "ethereumjs-util": "7.1.3",
        "stack-trace": "0.0.10"
    },
    "devDependencies": {
        "@openzeppelin/test-helpers": "0.5.15",
        "@truffle/hdwallet-provider": "^1.7.0",
        "async": "^3.2.3",
        "csv-writer": "^1.6.0",
        "dotenv": "10.0.0",
        "ganache-time-traveler": "1.0.16",
        "readline": "1.3.0",
        "solhint": "3.3.6",
        "solidity-coverage": "0.7.18",
        "truffle-flattener": "^1.5.0",
        "truffle-plugin-verify": "^0.5.21"
    }
}
