{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "rootDirs": ["./src"],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": ["dist", "node_modules"],
    "include": ["./src"]
}
