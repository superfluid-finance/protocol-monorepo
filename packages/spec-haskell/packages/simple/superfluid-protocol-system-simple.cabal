cabal-version: 3.0
name:          superfluid-protocol-system-simple
version:       0.0.1.0
license:       MIT
maintainer:    miao@superfluid.finance
author:        Miao ZhiCheng
tested-with:   ghc ==9.2.2 ghc ==8.10.7
homepage:      https://www.superfluid.finance/
synopsis:      Superfluid protocol simple system instances.
description:
    Part of the monorepo of https://github.com/superfluid-finance/protocol-monorepo/.

category:      Money
build-type:    Simple

library
    exposed-modules:
        Money.Systems.Superfluid.Instances.Simple.SuperfluidTypes
        Money.Systems.Superfluid.Instances.Simple.Integrations.Serialization
        Money.Systems.Superfluid.Instances.Simple.System

    hs-source-dirs:   src
    default-language: GHC2021
    ghc-options:      -Wall
    build-depends:
        base >=4.12 && <5,
        data-default,
        containers,
        transformers,
        bytestring,
        binary,
        superfluid-protocol-spec-core ==0.0.1.0

test-suite tests
    type:             exitcode-stdio-1.0
    main-is:          Tests.hs
    hs-source-dirs:   test
    other-modules:
        Money.Systems.Superfluid.RealtimeBalance_prop
        Money.Systems.Superfluid.TokenTester
        Money.Systems.Superfluid.System_unit

    default-language: GHC2021
    ghc-options:      -Wall -Wno-incomplete-uni-patterns
    build-depends:
        base >=4.12 && <5,
        test-framework >=0.8,
        HUnit >=1.6.0.0,
        test-framework-hunit >=0.3.0,
        test-framework-quickcheck2 >=0.3.0,
        QuickCheck >=2.13,
        time,
        data-default,
        transformers,
        superfluid-protocol-spec-core ==0.0.1.0,
        superfluid-protocol-system-simple ==0.0.1.0
