{
    "name": "@superfluid-finance/subgraph",
    "version": "0.0.2",
    "description": "Subgraph for the Superfluid Ethereum contracts",
    "homepage": "https://github.com/superfluid-finance/protocol-monorepo/tree/dev/packages/subgraph",
    "repository": "github:superfluid-finance/protocol-monorepo",
    "license": "MIT",
    "scripts": {
        "getAbi": "node scripts/getAbi",
        "codegen": "graph codegen",
        "build": "graph build",
        "test": "truffle test --network ganache",
        "prepare-local": "mustache config/ganache.json test-subgraph.template.yaml > subgraph.yaml",
        "set-network-local": "mustache config/ganache.json src/addresses.template.ts > src/addresses.ts",
        "create-local": "graph create superfluid-test --node http://localhost:8020/",
        "remove-local": "graph remove superfluid-test --node http://localhost:8020/",
        "deploy-local": "graph deploy superfluid-test --node http://localhost:8020/ --ipfs http://localhost:5001 --version-label v0.0.1",
        "watch": "graph deploy superfluid-test --node http://localhost:8020/ --ipfs http://localhost:5001 --watch",
        "deploy": "graph deploy $SUBGRAPH_NAME --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs --access-token $THEGRAPH_ACCESS_TOKEN",
        "deploy:feature": "run-s deploy:feature:*",
        "prepare:feature:matic": "mustache config/matic.json subgraph.template.yaml > subgraph.yaml",
        "set-network:feature:matic": "mustache config/matic.json src/addresses.template.ts > src/addresses.ts",
        "deploy:feature:matic": "yarn prepare:feature:matic && yarn set-network:feature:matic && SUBGRAPH_NAME=superfluid-finance/protocol-feature-matic yarn deploy",
        "deploy:dev": "run-s deploy:dev:*",
        "prepare:dev:goerli": "mustache config/goerli.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:goerli": "mustache config/goerli.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:goerli": "yarn prepare:dev:goerli && yarn set-network:dev:goerli && SUBGRAPH_NAME=superfluid-finance/protocol-dev-goerli yarn deploy",
        "prepare:dev:rinkeby": "mustache config/rinkeby.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:rinkeby": "mustache config/rinkeby.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:rinkeby": "yarn prepare:dev:rinkeby && yarn set-network:dev:rinkeby && SUBGRAPH_NAME=superfluid-finance/protocol-dev-rinkeby yarn deploy",
        "prepare:dev:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:ropsten": "mustache config/ropsten.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:ropsten": "yarn prepare:dev:ropsten && yarn set-network:dev:ropsten && SUBGRAPH_NAME=superfluid-finance/protocol-dev-ropsten yarn deploy",
        "prepare:dev:kovan": "mustache config/kovan.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:kovan": "mustache config/kovan.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:kovan": "yarn prepare:dev:kovan && yarn set-network:dev:kovan && SUBGRAPH_NAME=superfluid-finance/protocol-dev-kovan yarn deploy",
        "prepare:dev:mumbai": "mustache config/mumbai.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:mumbai": "mustache config/mumbai.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:mumbai": "yarn prepare:dev:mumbai && yarn set-network:dev:mumbai && SUBGRAPH_NAME=superfluid-finance/protocol-dev-mumbai yarn deploy",
        "prepare:dev:xdai": "mustache config/xdai.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:xdai": "mustache config/xdai.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:xdai": "yarn prepare:dev:xdai && yarn set-network:dev:xdai && SUBGRAPH_NAME=superfluid-finance/protocol-dev-xdai yarn deploy",
        "prepare:dev:matic": "mustache config/matic.json subgraph.template.yaml > subgraph.yaml",
        "set-network:dev:matic": "mustache config/matic.json src/addresses.template.ts > src/addresses.ts",
        "deploy:dev:matic": "yarn prepare:dev:matic && yarn set-network:dev:matic && SUBGRAPH_NAME=superfluid-finance/protocol-dev-matic yarn deploy",
        "lint": "run-s lint:*",
        "lint:js-eslint": "eslint . --max-warnings=0 --report-unused-disable-directives --fix && echo 'âœ”  Your .js files look good.'",
        "pre-commit": "true"
    },
    "dependencies": {
        "@decentral.ee/web3-helpers": "^0.5.3",
        "@graphprotocol/graph-cli": "0.21.1",
        "@graphprotocol/graph-ts": "0.20.0",
        "@superfluid-finance/js-sdk": "0.5.5",
        "ganache-time-traveler": "^1.0.16",
        "mustache": "^4.2.0",
        "truffle": "^5.4.5"
    },
    "devDependencies": {
        "@ethersproject/providers": "^5.4.5",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@types/chai": "^4.2.21",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.9.1",
        "chai": "^4.3.4",
        "chai-ethers": "^0.0.1",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.4.6",
        "graphql": "^15.5.3",
        "graphql-request": "^3.5.0",
        "hardhat": "^2.6.4"
    },
    "workspaces": {
        "nohoist": [
            "**/@graphprotocol",
            "**/@graphprotocol/**"
        ]
    }
}
